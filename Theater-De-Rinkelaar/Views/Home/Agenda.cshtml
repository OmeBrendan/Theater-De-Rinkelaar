@{
    ViewData["Title"] = "Agenda";
    ViewData["activeTab"] = "agenda";
}
@using Theater_De_Rinkelaar.Databases
@model List<Voorstelling>


@foreach (var product in Model)
{
    <div class="row">
        <div class="column">
            <h1>@product.Datum van @product.Begintijd tot @product.Eindtijd :</h1>
            <h2>@product.Naam</h2>
            <br> @product.Beschrijvingkort <br> er zijn nog @product.Beschikbaarheid kaartjes
            <a class=agendaknop href="/voorstelling/@product.Id">Koop snel kaartjes!</a>
        </div>
    </div>
}
