@model Theater_De_Rinkelaar.Models.Person
@{
    ViewData["Title"] = "Contact";
    ViewData["activeTab"] = "contact";
}


<div class="row">
    <div class="column">
        Heb je vragen over voorstellingen of kom je problemen op de site tegen?
        <br>
        Bel ons via:
        06  696 420 69
        <br>
        Of email naar: TheaterDeRinkelaar@gmail.com
    </div>
</div>

<div class="row">
    <div class="columncp">
        <form method="post" class="contactform">
            <div type=text class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName)
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div type=text class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName)
                @Html.ValidationMessageFor(m => m.LastName)
            </div>

            <div type=text class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div type=text class="form-group">
                @Html.LabelFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone)
                @Html.ValidationMessageFor(m => m.Phone)
            </div>

            <div type=text class="form-group">
                @Html.LabelFor(m => m.Address)
                @Html.TextBoxFor(m => m.Address)
                @Html.ValidationMessageFor(m => m.Address)
            </div>

            <div type=text class="form-group2">
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description)
                @Html.ValidationMessageFor(m => m.Description)
            </div>

            <div class="verstuurknop">
                <input type="submit" value="Verstuur Bericht" />
            </div>
        </form>
    </div>
</div>
